        <TextBlock x:Name="opisFilmuTextBlock" TextWrapping="WrapWithOverflow" Margin="21,192,39,24"></TextBlock>
        <Label Content="Rezyser" x:Name="rezyserFilmuLabel" HorizontalAlignment="Left" Margin="21,119,0,0" VerticalAlignment="Top" Width="551"/>
